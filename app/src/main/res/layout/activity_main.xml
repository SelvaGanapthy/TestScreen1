<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginscreen"
    android:layout_height="match_parent"
    tools:context="com.example.admin.testscreen1.login.MainActivity">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/id_userim"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="89dp"
                android:src="@drawable/acholderim" />

            <ImageView
                android:id="@+id/id_passim"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/id_userim"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/userpassim" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                android:paddingLeft="55dp"
                android:paddingRight="3dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/id_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="180dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#ffffff"
                        android:textSize="17dp"
                        android:textStyle="italic" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/id_userpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_username"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:hint="@string/password"
                        android:inputType="text"
                        android:password="true"
                        android:textColor="#000000"
                        android:textColorHint="#ffffff"
                        android:textSize="17dp"
                        android:textStyle="italic" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#4f6fe3"
            android:gravity="center"
            android:id="@+id/id_blogin"
            android:text="@string/buttonlogin"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:textStyle="normal" />
    </LinearLayout>

</ScrollView>
